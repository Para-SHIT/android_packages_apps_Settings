<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/status_bar_greeting_settings_title">

    <ListPreference
        android:key="greeting_show_label"
        android:title="@string/show_title"
        android:entries="@array/greeting_show_label_entries"
        android:entryValues="@array/greeting_show_label_values" />

    <EditTextPreference
        android:key="greeting_custom_label"
        android:title="@string/greeting_custom_label_title"
        android:dialogMessage="@string/greeting_custom_label_dlg_message" />

    <com.android.settings.temasek.SeekBarPreference
        android:key="greeting_timeout"
        android:title="@string/greeting_timeout_title"
        android:max="10000"
        settings:min="100"
        settings:unitsLeft=""
        settings:unitsRight="s"
        settings:interval="500"
        settings:isSeconds="true"
        android:persistent="false" />

    <SwitchPreference
        android:key="status_bar_greeting_show_label_preview"
        android:title="@string/greeting_show_label_preview_title"
        android:summary="@string/greeting_show_label_preview_summary"
        android:defaultValue="false" />

    <com.android.settings.temasek.SeekBarPreference
        android:key="status_bar_greeting_font_size"
        android:title="@string/greeting_label_font_size"
        android:defaultValue="12"
        android:max="23"
        settings:min="4"
        settings:unitsLeft=""
        settings:unitsRight="dp" />

    <ListPreference
        android:key="status_bar_greeting_font_style"
        android:entries="@array/font_style_entries"
        android:entryValues="@array/font_style_values"
        android:title="@string/greeting_label_font_style" />

    <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:key="greeting_color"
        android:title="@string/color_title"
        android:defaultValue="0xffffffff" />

</PreferenceScreen>
