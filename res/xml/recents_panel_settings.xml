<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/recents_panel_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Search in Recents -->
    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="recents_show_search_bar"
        android:title="@string/recents_show_searchbar"
        settings:keywords="@string/keywords_recents_show_searchbar"
        android:defaultValue="true"
        settings:advanced="true" />

    <SwitchPreference
        android:key="show_clear_all_recents"
        android:title="@string/show_clear_all_recents_button_title"
        android:summary="@string/show_clear_all_recents_button_summary" />

    <!-- Membar in Recents -->
    <SwitchPreference
        android:key="systemui_recents_mem_display"
        android:title="@string/recents_show_membar_title"
        android:summary="@string/recents_show_membar_summary" />

    <PreferenceScreen
        android:key="immersive_recents_view"
        android:title="@string/immersive_recents_title"
        android:summary="@string/immersive_recents_summary"
        android:fragment="com.android.settings.temasek.ImmersiveRecents" />

    <PreferenceCategory
        android:key="recent_panel"
        android:title="@string/recents_panel_settings" >

        <SwitchPreference
            android:key="recents_clear_all_dismiss_all"
            android:title="@string/recents_clear_all_dismiss_all_title"
            android:summary="@string/recents_clear_all_dismiss_all_summary" />

        <ListPreference
            android:key="recents_clear_all_location"
            android:title="@string/recents_clear_all_location_title"
            android:entries="@array/recents_clear_all_location_entries"
            android:entryValues="@array/recents_clear_all_location_values" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="android_recents_clear_all_bg_color"
            android:title="@string/background_title"
            android:defaultValue="0xffdc4c3c" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="android_recents_clear_all_icon_color"
            android:title="@string/icon_title"
            android:defaultValue="0xffffffff" />
    </PreferenceCategory>

    <PreferenceCategory
	    android:key="memory_bar"
	    android:title="@string/memory_bar_options_title">

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="memory_bar_color"
            android:title="@string/membar_bar_color"
            android:defaultValue="0xff1b231d" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="memory_bar_free_color"
            android:title="@string/membar_bar_free_color"
            android:defaultValue="0xff82d989" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="mem_text_color"
            android:title="@string/membar_text_color"
            android:defaultValue="0xffffffff" />
    </PreferenceCategory>

    <PreferenceCategory
	    android:key="other_recent"
	    android:title="@string/other_recents_option_title">

        <com.android.settings.temasek.SeekBarPreference
            android:key="recents_full_screen_clock_date_size"
            android:title="@string/recents_font_size_title"
            android:defaultValue="14"
            android:max="30"
            settings:minimum="4"
            settings:unitsLeft=""
            settings:unitsRight="dp" />

        <ListPreference
            android:key="recents_font_style"
            android:entries="@array/font_style_entries"
            android:entryValues="@array/font_style_values"
            android:summary="@string/recents_font_style_summary"
            android:title="@string/recents_font_style_title" />

        <!-- Hide Apps from Recents (HAFR) -->
        <Preference
            android:key="hide_app_from_recents"
            android:title="@string/hide_apps_from_recents_title"
            android:summary="@string/hide_apps_from_recents_summary" />

    	<!-- OmniSwitch -->
    	<PreferenceScreen
        	android:key="omniswitch"
        	android:id="@+id/omniswitch"
        	android:title="@string/omniswitch_settings_title"
        	android:fragment="com.android.settings.temasek.OmniSwitch" />

        <!-- Slim recents -->
    	<PreferenceScreen
        	android:key="recent_panel"
        	android:fragment="com.android.settings.temasek.RecentPanel"
        	android:title="@string/recent_panel_category" />

    </PreferenceCategory>

</PreferenceScreen>
