<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/status_bar_title">

    <PreferenceCategory
        android:title="@string/general_options_title">

        <PreferenceScreen
            android:key="status_bar_battery_status_settings"
            android:title="@string/status_bar_battery_status_settings_title"
            android:summary="@string/status_bar_battery_status_settings_summary"
            android:fragment="com.android.settings.temasek.StatusBarBatteryStatusSettings" />

        <PreferenceScreen
            android:key="status_bar_clock_style"
            android:title="@string/status_bar_clock_style_title"
            android:summary="@string/status_bar_clock_summary"
            android:fragment="com.android.settings.temasek.StatusBarClockSettings" />

        <PreferenceScreen
            android:key="network_traffic_settings"
            android:title="@string/network_traffic_title"
            android:summary="@string/network_traffic_settings_summary"
            android:fragment="com.android.settings.temasek.NetworkTrafficSettings" />

        <PreferenceScreen
            android:key="temasek_logo"
            android:title="@string/status_bar_logo_title"
            android:summary="@string/status_bar_logo_summary"
            android:fragment="com.android.settings.temasek.fragments.Logo" />

        <PreferenceScreen
            android:key="status_bar_temperature_style"
            android:title="@string/status_bar_temperature_title"
            android:summary="@string/status_bar_temperature_summary"
            android:fragment="com.android.settings.temasek.StatusBarWeather" />

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="status_bar_network_activity"
            android:title="@string/status_bar_network_activity_title"
            android:summary="@string/status_bar_network_activity_summary"
            android:defaultValue="false"/>

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="show_bluetooth_icon"
            android:title="@string/status_bar_bluetooth_icon"
            android:summary="@string/status_bar_bluetooth_icon_summary"
            android:defaultValue="true" />

        <!-- Headset icon switch -->
        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="show_headset_icon"
            android:title="@string/show_headset_icon_title"
            android:summary="@string/show_headset_icon_summary"
            android:defaultValue="true" />

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="show_su_indicator"
            android:title="@string/su_indicator"
            android:summary="@string/su_indicator_summary"
            android:defaultValue="true" />

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="status_bar_brightness_control"
            android:title="@string/status_bar_toggle_brightness"
            android:summary="@string/status_bar_toggle_brightness_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/status_bar_label_cat">

        <PreferenceScreen
            android:key="carrier_options"
            android:title="@string/carrier_options"
            android:summary="@string/carrier_options_summary"
            android:fragment="com.android.settings.temasek.CarrierLabel" />

		<!-- Greeting -->
        <PreferenceScreen
            android:key="status_bar_greeting_settings"
            android:title="@string/status_bar_greeting_settings_title"
            android:summary="@string/status_bar_greeting_settings_summary"
            android:fragment="com.android.settings.temasek.StatusBarGreetingSettings" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/notifications_category_title">

        <SwitchPreference
            android:key="status_bar_ticker"
            android:title="@string/status_bar_ticker_title"
            android:summary="@string/status_bar_ticker_summary"
            android:defaultValue="true" />

        <com.android.settings.temasek.SeekBarPreference
            android:key="status_bar_ticker_font_size"
            android:title="@string/status_bar_ticker_font_size"
            android:defaultValue="14"
            android:max="20"
            settings:minimum="4"
            settings:unitsLeft=""
            settings:unitsRight="dp"
            android:dependency="status_bar_ticker" />

        <ListPreference
            android:key="status_bar_ticker_font_style"
            android:entries="@array/font_style_entries"
            android:entryValues="@array/font_style_values"
            android:title="@string/status_bar_ticker_font_style"
            android:dependency="status_bar_ticker" />

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="status_bar_notif_count"
            android:title="@string/status_bar_notif_count_title"
            android:summary="@string/status_bar_notif_count_summary"
            android:defaultValue="false" />

    	<PreferenceScreen
            android:key="breathing_notifications"
            android:fragment="com.android.settings.temasek.BreathingNotifications"
            android:title="@string/breathing_notifications_title" />

    </PreferenceCategory>

</PreferenceScreen>
