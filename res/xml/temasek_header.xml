<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"	
    android:title="@string/header_title">

    <PreferenceCategory
        android:title="@string/contextual_title" >

        <SwitchPreference
            android:key="status_bar_custom_header"
            android:title="@string/status_bar_custom_header_title"
            android:summary="@string/status_bar_custom_header_summary"
            android:defaultValue="false"
            android:persistent="false" />

        <ListPreference
            android:key="daylight_header_pack"
            android:title="@string/daylight_header_pack_title"
            android:persistent="false"
            android:dependency="status_bar_custom_header" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/header_items" >

        <ListPreference
        	android:key="status_bar_power_menu"
        	android:title="@string/status_bar_power_menu_title"
        	android:dialogTitle="@string/status_bar_power_menu_dialog_title"
        	android:entries="@array/status_bar_power_menu_entries"
        	android:entryValues="@array/status_bar_power_menu_values"
        	android:defaultValue="0"
        	android:persistent="false" />

        <PreferenceScreen
            android:key="task_manager"
            android:title="@string/task_manager_title"
            android:summary="@string/task_manager_summary"
            android:fragment="com.android.settings.temasek.TaskManagerSettings" />
      
        <SwitchPreference
	    	android:key="expanded_header_show_weather"
	    	android:title="@string/expanded_header_show_weather_title"
	    	android:summary="@string/expanded_header_show_weather_summary"
	    	android:defaultValue="true" />

        <SwitchPreference
	    	android:key="expanded_header_show_weather_location"
	    	android:title="@string/expanded_header_show_weather_location_title"
	    	android:summary="@string/expanded_header_show_weather_location_summary"
	    	android:defaultValue="true" />

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
	    	android:key="hide_panel_clock"
	    	android:title="@string/hide_panel_clock_title" 
	    	android:summaryOn="@string/hide_clock_summary_on"
	    	android:summaryOff="@string/hide_clock_summary_off"
	    	android:defaultValue="true"/>
	
		<com.android.settings.cyanogenmod.SystemSettingSwitchPreference
	    	android:key="hide_panel_date"
	    	android:title="@string/hide_panel_date_title" 
	    	android:summaryOn="@string/hide_panel_date_summary_on"
	    	android:summaryOff="@string/hide_panel_date_summary_off"
	    	android:defaultValue="true"/>
	
		<com.android.settings.cyanogenmod.SystemSettingSwitchPreference
	    	android:key="hide_panel_clockvalue"
	    	android:title="@string/hide_panel_clockvalue" 
	    	android:summaryOn="@string/hide_ampm_summary_on"
	    	android:summaryOff="@string/hide_ampm_summary_off"
	    	android:defaultValue="true"/>
	
		<com.android.settings.cyanogenmod.SystemSettingSwitchPreference
	    	android:key="hide_panel_battery"
	    	android:title="@string/hide_panel_battery" 
	    	android:summaryOn="@string/hide_battery_summary_on"
	    	android:summaryOff="@string/hide_battery_summary_off"
	    	android:defaultValue="true"/>
	
		<com.android.settings.cyanogenmod.SystemSettingSwitchPreference
	    	android:key="hide_panel_icons"
	    	android:title="@string/hide_panel_icons" 
	    	android:summaryOn="@string/hide_icons_summary_on"
	    	android:summaryOff="@string/hide_icons_summary_off"
	    	android:defaultValue="true"/>
	
		<com.android.settings.cyanogenmod.SystemSettingSwitchPreference
	    	android:key="hide_user_icon"
	    	android:title="@string/hide_user_icon" 
	    	android:summaryOn="@string/hide_user_summary_on"
	    	android:summaryOff="@string/hide_user_summary_off"
	    	android:defaultValue="true"/>

    </PreferenceCategory>

</PreferenceScreen>
