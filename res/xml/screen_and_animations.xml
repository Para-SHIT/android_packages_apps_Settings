<?xml version="1.0" encoding="UTF-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/screen_and_animations_title">

    <PreferenceCategory
        android:key="screen_and_animations"
        android:title="@string/animations_cat" >

        <PreferenceScreen
            android:key="interface_animation_keyboard"
            android:fragment="com.android.settings.temasek.KeyboardAnimationInterfaceSettings"
            android:title="@string/ime_animation_title"
            android:summary="@string/ime_animation_summary" />

        <PreferenceScreen
        	android:key="interface_animation_listview"
        	android:fragment="com.android.settings.temasek.ListViewAnimationInterfaceSettings"
        	android:title="@string/listview_animation_title"
            android:summary="@string/listview_animation_summary" />

        <!-- AOKP custom animations -->
        <PreferenceScreen
            android:key="aokp_animation"
            android:title="@string/aokp_animation_title"
            android:summary="@string/aokp_animation_summary"
            android:fragment="com.android.settings.temasek.fragments.AnimationControls" />

        <ListPreference
            android:key="power_menu_animations"
            android:title="@string/power_menu_animation_title"
            android:dialogTitle="@string/power_menu_animation_dialog_title"
            android:entries="@array/power_menu_animations_entries"
            android:entryValues="@array/power_menu_animations_values"
            android:summary="@string/power_menu_animation_summary"
            android:persistent="false" />

        <!-- Toast Animation -->
        <ListPreference
            android:key="toast_animation"
            android:title="@string/toast_animation_title"
            android:entries="@array/toast_animation_entries"
            android:entryValues="@array/toast_animation_values"
            android:persistent="false" />

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="toast_icon"
            android:title="@string/toast_icon_title"
            android:defaultValue="true" />

        <PreferenceScreen
            android:key="overscroll_effects"
            android:title="@string/ui_overscroll_title"
            android:summary="@string/overscroll_weight_summary"
            android:fragment="com.android.settings.temasek.OverscrollEffects" />

        <ListPreference 
            android:key="pref_scrollingcache"
            android:dialogTitle="@string/pref_scrollingcache_title"
            android:title="@string/pref_scrollingcache_title"
            android:summary="@string/pref_scrollingcache_summary"
            android:entries="@array/entries_scrollingcache"
            android:entryValues="@array/values_scrollingcache" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_interface">

        <PreferenceScreen
            android:key="dashboard_colors"
            android:title="@string/db_colors"
            android:summary="@string/db_colors_summary"
	    android:fragment="com.android.settings.temasek.DashBoardColors"/>

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="disable_torch_on_screen_off"
            android:title="@string/disable_torch_screen_off_title"
            android:defaultValue="false" />

        <ListPreference
            android:key="disable_torch_on_screen_off_delay"
            android:title="@string/disable_torch_screen_off_delay_title"
            android:dialogTitle="@string/disable_torch_screen_off_delay_title"
            android:entries="@array/torch_screen_off_delay_entries"
            android:entryValues="@array/torch_screen_off_delay_values"
            android:dependency="disable_torch_on_screen_off" />

    </PreferenceCategory>

</PreferenceScreen>
